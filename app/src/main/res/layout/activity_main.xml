<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/btn_quic_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="QUIC Test"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <TextView
        android:id="@+id/tv_quic_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btn_quic_test"
        tools:text="result"
        />

    <Button
        android:id="@+id/btn_http_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Http2.0 Test"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_quic_result"
        />
    <TextView
        android:id="@+id/tv_http_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btn_http_test"
        tools:text="result"
        />
    <Button
        android:id="@+id/btn_quic_ok_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="QUIC Test (over OkHttp)"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_http_result"
        />
    <TextView
        android:id="@+id/tv_quic_ok_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btn_quic_ok_test"
        tools:text="result"
        />

</android.support.constraint.ConstraintLayout>